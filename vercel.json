
{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/:path((?!api/|assets/|favicon.ico|robots.txt|sitemap.xml|monitizelogo.jpg|placeholder.svg|lovable-uploads/.*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/:path((?!api/|assets/|favicon.ico|robots.txt|sitemap.xml|monitizelogo.jpg|placeholder.svg|lovable-uploads/.*).*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=1, stale-while-revalidate=59"
        }
      ]
    }
  ]
}
