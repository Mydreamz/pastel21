
{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "optimizeFonts": true,
        "optimizeCss": true,
        "optimizeImages": true
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    { 
      "src": "/(.*\\.(js|css|jpg|jpeg|png|gif|svg|ico|json|webp|woff|woff2|ttf|otf)$)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable" 
      },
      "dest": "/$1"
    },
    {
      "src": "/(create|view/.*|preview/.*|edit/.*|profile|success|search|forgot-password|login|signup|settings|content/.*|categories/.*|tags/.*|user/.*|features|pricing|contact|about|faq|help|dashboard|library|analytics|notifications)",
      "headers": {
        "cache-control": "public, s-maxage=1, stale-while-revalidate=59"
      },
      "dest": "/index.html"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml"
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/(.*)",
      "headers": {
        "cache-control": "public, s-maxage=1, stale-while-revalidate=59"
      },
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
